{
  "name": "mscgenjs-cli",
  "version": "2.0.4",
  "description": "Render sequence charts from the command line",
  "repository": {
    "type": "git",
    "url": "https://github.com/mscgenjs/mscgenjs-cli"
  },
  "bin": {
    "mscgen_js": "bin/mscgen_js",
    "mscgenjs": "bin/mscgen_js",
    "mscgen.js": "bin/mscgen_js"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "npm-run-all build:clean build:compile build:copy",
    "build:clean": "shx rm -rf dist/*",
    "build:compile": "tsc --project src",
    "build:copy": "shx cp src/actions/template.html dist/actions/template.html",
    "check": "npm-run-all build lint depcruise test:cover",
    "check:full": "npm-run-all check nsp",
    "depcruise": "depcruise --validate -- src test",
    "depcruise:cat": "depcruise --output-type dot --validate -- src | dot -T png | imgcat",
    "depcruise:graph": "depcruise --output-type dot --validate -- src/cli.ts | dot -T svg > tmp_deps.svg",
    "lint": "tslint src/*.ts src/*/*.ts test/*.ts test/*/*.ts",
    "lint:fix": "tslint --format verbose --fix src/*.ts src/*/*.ts test/*.ts test/*/*.ts",
    "npm-check-updates": "ncu --upgrade",
    "npm-install": "npm install",
    "nsp": "nsp check --warn-only",
    "test": "mocha --require ts-node/register --timeout 10000 --reporter dot --recursive test/*.ts test/**/*.ts",
    "test:cover": "nyc --reporter text-summary --extension .ts --check-coverage --lines 85 npm test",
    "update-dependencies": "npm-run-all npm-check-updates npm-install lint:fix depcruise build test",
    "watch": "tsc --project src --watch"
  },
  "keywords": [
    "mscgen",
    "sequence chart",
    "sequence diagram",
    "xu",
    "msgenny"
  ],
  "author": "Sander Verweij",
  "contributors": [
    {
      "name": "djMax (Max Metral)",
      "url": "https://github.com/djMax"
    }
  ],
  "license": "GPL-3.0",
  "engines": {
    "node": ">=6.0"
  },
  "bugs": {
    "url": "https://github.com/mscgenjs/mscgenjs-cli/issues"
  },
  "homepage": "https://github.com/mscgenjs/mscgenjs-cli",
  "dependencies": {
    "commander": "2.15.0",
    "mscgenjs": "1.15.1",
    "mscgenjs-inpage": "1.13.0",
    "pify": "3.0.0",
    "puppeteer": "1.1.1"
  },
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/mocha": "2.2.48",
    "@types/node": "9.4.7",
    "@types/pify": "3.0.1",
    "@types/puppeteer": "1.1.0",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "dependency-cruiser": "3.0.1",
    "mocha": "5.0.4",
    "npm-check-updates": "2.14.1",
    "npm-run-all": "4.1.2",
    "nsp": "3.2.1",
    "nyc": "11.4.1",
    "shx": "0.2.2",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
